<%= form_with url: thought_post_path do |form|%>
  <div class="mb-3">
    <%= form.label :idea %>
    <%= form.text_area :idea, size: "70x5", class: "form-control", placeholder: "Share your Idea...", :maxlength => 200 %>
  </div>

  <div class="d-flex align-items-center justify-content-end">
    <%= form.submit "Post", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="border-top border-2 my-4 py-4">
  <% @thoughts.each do |thought| %>
    <div class="card mb-2">
      <div class="card-body">
        <h6 class="card-title">Idea shared by <%= thought.user.email %></h5>
        <p class="card-subtitle mb-2 text-muted border-bottom" style="font-size: 11px;"><%= thought.posted_at %></p>
        <p class="card-text"><%= thought.idea %></p>
        <%= link_to like_path(thought.id), method: :post, class: "card-link btn btn-outline-link", id: "like-button", remote: true do %>
          <% if thought.like.present? %>
            <%= thought.like.count %>
          <% end %>
          <%= fa_icon "heart" %>
        <% end %>
        <a href="#" class="card-link btn btn-outline-link"><i class="far fa-comment"></i></a>
      </div> 
    </div>
  <% end %>
</div>

